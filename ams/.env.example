# Django 設定
SECRET_KEY=your-secret-key-here
DEBUG=False

# 允許的主機（正式環境請修改）
ALLOWED_HOSTS=127.0.0.1,localhost

# 資料庫設定
DB_ENGINE=django.db.backends.mysql
DB_NAME=ams
DB_USER=root
DB_PASSWORD=your-database-password
DB_HOST=127.0.0.1
DB_PORT=3306

# Email 設定
